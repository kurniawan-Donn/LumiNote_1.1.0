<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#BCCCDC"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:contentDescription="Tombol Kembali"
                android:padding="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_panah" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginEnd="45dp"
                android:layout_toStartOf="@id/btnBackupIcon"
                android:text="Pencadangan &amp; Pemulihan"
                android:textAlignment="center"
                android:textColor="#2C3E50"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnBackupIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Backup Icon"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_backup1" />

        </RelativeLayout>

        <!-- Information Text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Backup digunakan untuk menyimpan data catatan dan tugas agar tidak hilang."
                android:textColor="#2C3E50"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="Restore digunakan untuk mengembalikan data dari file cadangan."
                android:textColor="#2C3E50"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Cadangkan Data Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardBackgroundColor="#D9EAFD"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Download Icon -->
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:contentDescription="Download Icon"
                        android:src="@drawable/ic_download"/>

                    <!-- Title and Description -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cadangkan Data"
                            android:textColor="#2C3E50"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Simpan semua catatan dan tugas ke dalam file cadangan di perangkat."
                            android:textColor="#2C3E50"
                            android:textSize="13sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Last Backup Info -->
                <TextView
                    android:id="@+id/tvSimpanTerakhir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Simpan Terakhir : Belum Ada"
                    android:textColor="#2C3E50"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Cadangkan Button -->
                <Button
                    android:id="@+id/btnCadangkan"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:text="Cadangkan"
                    android:textAllCaps="false"
                    android:textColor="#2C3E50"
                    android:textSize="16sp"
                    android:backgroundTint="@color/white"
                    android:textStyle="bold" />

                <!-- Loading Progress (hidden by default) -->
                <ProgressBar
                    android:id="@+id/progressBackup"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Pulihkan Data Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#D9EAFD"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Upload Icon -->
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:contentDescription="Upload Icon"
                        android:src="@drawable/ic_upload"/>

                    <!-- Title and Description -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pulihkan Data"
                            android:textColor="#2C3E50"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Kembalikan data dari file cadangan yang tersimpan di perangkat."
                            android:textColor="#2C3E50"
                            android:textSize="13sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Warning Text (shown only if backup exists) -->
                <TextView
                    android:id="@+id/tvWarningRestore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Data saat ini akan diganti oleh data dari Cadangan"
                    android:textColor="#F44336"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <View
                    android:layout_width="335dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginVertical="5dp"
                    android:background="#BCCCDC"/>

                <!-- Pulihkan Button -->
                <Button
                    android:id="@+id/btnPulihkan"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:text="Pulihkan"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:backgroundTint="@color/text_secondary"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>